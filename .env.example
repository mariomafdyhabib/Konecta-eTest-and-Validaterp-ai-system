# N8N CV Screening Bot - Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!

# ============================================
# API Keys for AI Services
# ============================================

# OpenRouter API Key (for LLM chat models)
# Get it from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# HuggingFace API Key (for embeddings)
# Get it from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# ============================================
# Pinecone Configuration (Vector Database)
# ============================================

# Pinecone API Key
# Get it from: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here

# Pinecone Environment (e.g., us-east-1-aws, gcp-starter)
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# Pinecone Index Name (create this in Pinecone dashboard)
PINECONE_INDEX_NAME=your_pinecone_index_name_here

# ============================================
# Telegram Bot Configuration
# ============================================

# Telegram Bot Token
# Get it from: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ============================================
# Google OAuth Credentials
# ============================================

# Google Drive OAuth2
# Get from: https://console.cloud.google.com/
GOOGLE_DRIVE_CLIENT_ID=your_google_drive_client_id_here
GOOGLE_DRIVE_CLIENT_SECRET=your_google_drive_client_secret_here

# Google Sheets OAuth2
GOOGLE_SHEETS_CLIENT_ID=your_google_sheets_client_id_here
GOOGLE_SHEETS_CLIENT_SECRET=your_google_sheets_client_secret_here

# Gmail OAuth2
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here

# ============================================
# Application Configuration
# ============================================

# Google Sheets IDs
# Get these from your Google Sheets URLs
# Example: https://docs.google.com/spreadsheets/d/SHEET_ID_HERE/edit
JOB_DESCRIPTIONS_SHEET_ID=your_job_descriptions_sheet_id_here
APPLICATIONS_SHEET_ID=your_applications_sheet_id_here

# HR Notification Email
# Email address to receive notifications for high-scoring candidates
HR_NOTIFICATION_EMAIL=hr@example.com

# ============================================
# Optional Configuration
# ============================================

# Timezone (default: UTC)
# Examples: America/New_York, Europe/London, Asia/Dubai
TZ=UTC
